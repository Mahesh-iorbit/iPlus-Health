<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#f7f8f8">

        <ImageView
        android:id="@+id/txt_fade_in"
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:src="@drawable/iorbit_health"
        android:textColor="@color/colorPrimary"
        android:textSize="45sp"
        android:textStyle="bold"
      />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/gifloading"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:id="@+id/fet_aim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="150dp">


        <LinearLayout
            android:id="@+id/time_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginEnd="10dp"
            android:visibility="gone">


            <ImageView

                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@drawable/time"
                android:layout_gravity="center"/>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Time"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/where_visible"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginEnd="10dp"
            android:visibility="gone">
            <ImageView

                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/compass"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Where"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/device_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginEnd="10dp"
            android:visibility="gone">
            <ImageView

                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/smartphone"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Device"
                android:textColor="#009688"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>